

@{
    ViewBag.Title = "Trang chủ";
    var category = ViewBag.category;
    var blogs = ViewBag.top3tintuc;
    var top4banchay = ViewBag.top4banchay;
    var top4sales = ViewBag.top4sales;
}

<style>

    .breadcrumb-option {
        display: none;
    }

    .hero__text > a:hover {
