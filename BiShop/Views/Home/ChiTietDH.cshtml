@model IEnumerable<BiShop.Models.CTDonHang>
@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="table-responsive product-list container mt-2 shadow-lg" >
    <table class="table table-bordered table-striped mt-0">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SanPham.TenSP)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SoLuong)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DonHang.DiaChiShip)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GhiChu)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SanPham.TenSP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoLuong)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DonHang.DiaChiShip)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GhiChu)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="container mb-3">
    <a title="Trở về" class="btn btn-warning" style="margin-top: 15px;" href="@Url.Action("LichSuThanhToan", "Home", new { id = Session["Id"] })"><i class="fas fa-backward"></i> Trở về</a>
</div>


