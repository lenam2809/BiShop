
@{
    ViewBag.Title = "Thông tin cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var donhang = ViewBag.donhang;
}
<style>
    .checkout__input input {
        color: black;
    }
</style>



<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <div class="row">
                <div class="col-lg-5 col-md-6">
                    <img style="border-radius: 50%; box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px;" src="@ViewBag.avt" alt="@ViewBag.TenKH" width="400" />
                </div>
                <div class="col-lg-7 col-md-6">
                    <h6 class="checkout__title">Tài khoản của bạn</h6>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="checkout__input">
                                <p>Họ và tên</p>
                                <input type="text" name="name" value="@ViewBag.TenKH" readonly>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="checkout__input">
                                <p>Ngày sinh</p>
                                <input type="text" name="name" value="@ViewBag.NgaySinh" readonly>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="checkout__input">
                                <p>Phone</p>
                                <input type="text" name="phone" value="@ViewBag.Phone" readonly>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="checkout__input">
                                <p>Email</p>
                                <input type="email" name="email" value="@ViewBag.Email" readonly>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="checkout__input">
                                <p>Địa chỉ</p>
                                <input type="text" name="diachi" value="@ViewBag.DiaChi" readonly>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="checkout__input">
                                <p>Giới tính</p>
                                <input type="text" name="gioitinh" value="@ViewBag.GioiTinh" readonly>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3">
                            <a href="@Url.Action("EditProfile", "Home", new { id = ViewBag.MaKH })" class="btn btn-warning">Chỉnh sửa</a>
                        </div>
                        <div class="col-lg-4">
                            <a href="@Url.Action("LichSuThanhToan", "Home", new { id = ViewBag.MaKH })" class="btn btn-warning">Lịch sử thanh toán</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<!-- Checkout Section End -->

