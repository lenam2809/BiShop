

@model IEnumerable<BiShop.Models.SearchResult>

@{
    ViewBag.Title = "Tìm kiếm";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var count = ViewBag.count;
    var title = ViewBag.title;
}
<style>
    .search-single > a:hover {
        color: chocolate;
    }
    img:hover {
        box-shadow: 2px 5px brown;
    }
</style>

<div class="container">
    <h3>Kết quả tìm kiếm cho "@ViewBag.search"</h3>
    <p>Khoảng @count kết quả trong @ViewBag.time giây</p>




    @foreach (var item in Model)
    {
       <div class="row">
           <div class="col-md-2">
               <a href="@Html.DisplayFor(modelItem => item.Link)"><img src="@Html.DisplayFor(modelItem => item.Image)" alt="@Html.DisplayFor(modelItem => item.Title)" width="150" /></a>
           </div>
           <div class="col-md-10">
               <div class="search-single mb-3 p-3">
                   <a href="@Html.DisplayFor(modelItem => item.Link)" class="">@Html.DisplayFor(modelItem => item.Title)</a>
                   <p>@Html.DisplayFor(modelItem => item.Content)</p>
               </div>
           </div>
       </div>

        <div class="dropdown-divider"></div>

    }
</div>




