@model IEnumerable<BiShop.Models.NhapSanPham>

@{
    ViewBag.Title = "Nhập sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<a title="Thêm mới" class="btn btn-info" style="margin-top: 15px; margin-bottom: 15px;" href="@Url.Action("Create", "NhapSanPhams")"><i class="fas fa-plus-circle"></i> Nhập sản phẩm</a>


<div class="table-responsive">
    <table id="example" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NgayNhap)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaNCC)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaNV)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayNhap)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaNCC)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaNV)
                    </td>
                    <td>
                        <div style="display: flex;">
                            <a title="Chi tiết" class="btn btn-primary" href="@Url.Action("Details", "NhapSanPhams", new { id = item.Id })"><i class="fa fa-info-circle"></i></a>&nbsp;
                            <a title="Chỉnh sửa" class="btn btn-success" href="@Url.Action("Edit", "NhapSanPhams", new { id = item.Id })"><i class="fas fa-edit"></i></a>&nbsp;
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
@section scripts {
    <script>
        $('#example').DataTable();
    </script>
}
