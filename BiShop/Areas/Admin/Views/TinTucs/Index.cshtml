@model IEnumerable<BiShop.Models.TinTuc>

@{
    ViewBag.Title = "Danh sách tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="row mt-3">
    <div class="col-sm-12">
        <!--Datatable-->
        <div class="mt-1 mb-3 p-3 button-container bg-white border shadow-sm">
            <a title="Thêm mới" class="btn btn-info" style="margin-top: 15px;" href="@Url.Action("Create", "TinTucs")"><i class="fas fa-plus-circle"></i> Thêm tin mới</a>

            <div class="table-responsive">
                <table id="example" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.TieuDe)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LinkAnh)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NoiDung)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NgayTao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NguoiTao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LuotXem)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LoaiTin.TenLoaiTin)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TieuDe)
                                </td>
                                <td>
                                    <img src="@Html.DisplayFor(modelItem => item.LinkAnh)" alt="@Html.DisplayFor(modelItem => item.TieuDe)" width="100" />
                                </td>
                                <td>
                                    @Html.Raw(item.NoiDung)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NgayTao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NguoiTao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LuotXem)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LoaiTin.TenLoaiTin)
                                </td>
                                <td>
                                    <div style="display: flex;">
                                        <a title="Chi tiết" class="btn btn-primary" href="@Url.Action("Details", "TinTucs", new { id = item.Id })"><i class="fa fa-info-circle"></i></a>&nbsp;
                                        <a title="Chỉnh sửa" class="btn btn-success" href="@Url.Action("Edit", "TinTucs", new { id = item.Id })"><i class="fas fa-edit"></i></a>&nbsp;
                                        <a title="Xóa" class="btn btn-danger" href="@Url.Action("Delete", "TinTucs", new { id = item.Id })"><i class="fas fa-trash-alt"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!--/Datatable-->

    </div>
</div>
@section scripts {
    <script>
        $('#example').DataTable();
    </script>
}


