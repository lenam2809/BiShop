
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="keywords" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!--Meta Responsive tag-->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!--Bootstrap CSS-->
    <link rel="stylesheet" href="~/Areas/assets/css/bootstrap.min.css">
    <!--Custom style.css-->
    <link rel="stylesheet" href="~/Areas/assets/css/quicksand.css">
    <link rel="stylesheet" href="~/Areas/assets/css/style.css">
    <!--Font Awesome-->
    <link rel="stylesheet" href="~/Areas/assets/css/fontawesome-all.min.css">
    <link rel="stylesheet" href="~/Areas/assets/css/fontawesome.css">

    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <title>BiLuxury - Login</title>
</head>

<body class="login-body">

    <!--Login Wrapper-->

    <div class="container-fluid login-wrapper">
        <div class="login-box">
            <h1 class="text-center mb-5"><i class="fa fa-rocket text-primary"></i> BiLuxury</h1>
            <div class="row">
                <div class="col-md-6 col-sm-6 col-12 login-box-info">
                    <h3 class="mb-4">Tầm nhìn</h3>
                    <p>@ViewBag.error</p>
                    <p class="mb-4">Trở thành thương hiệu thời trang nam hàng đầu được giới trẻ tin dùng</p>
                    <p class="text-center"><a href="" class="btn btn-light">Xem thêm</a></p>
                </div>
                <div class="col-md-6 col-sm-6 col-12 login-box-form p-4">
                    <h3 class="mb-2">Login</h3>
                    <small id="title-login" class="text-muted bc-description">Đăng nhập bằng thông tin cá nhân của bạn</small>
                    <form action="/AdminManagement/Login" returnUrl = "@Request.QueryString["ReturnUrl"]" enctype = "multipart/form-data" method="post" class="mt-2">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fa fa-user"></i></span>
                            </div>
                            <input type="text" class="form-control mt-0" placeholder="Username" name="email" aria-label="Username" aria-describedby="basic-addon1">
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fa fa-lock"></i></span>
                            </div>
                            <input type="password" class="form-control mt-0" placeholder="Password" name="password" aria-label="Password" aria-describedby="basic-addon1">
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-theme btn-block p-2 mb-1">Login</button>
                            <a href="#">
                                <small class="text-theme"><strong>Forgot password?</strong></small>
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!--Login Wrapper-->
    <!-- Page JavaScript Files-->
    <script src="~/Areas/assets/js/jquery.min.js"></script>
    <script src="~/Areas/assets/js/jquery-1.12.4.min.js"></script>
    <!--Popper JS-->
    <script src="~/Areas/assets/js/popper.min.js"></script>
    <!--Bootstrap-->
    <script src="~/Areas/assets/js/bootstrap.min.js"></script>

    <!--Custom Js Script-->
    <script src="~/Areas/assets/js/custom.js"></script>
    <!--Custom Js Script-->
</body>
</html>
