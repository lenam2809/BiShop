@model IEnumerable<BiShop.Models.Ship>

@{
    ViewBag.Title = "Danh sách đơn vị giao hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="table-responsive">
    <table id="example" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ShipName)
                </th>
                <th>Hoạt động</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShipName)
                    </td>
                    <td>
                        <div style="display: flex;">
                            <a title="Chỉnh sửa" class="btn btn-success" href="@Url.Action("Edit", "Ships", new { id = item.Id })"><i class="fas fa-edit"></i></a>&nbsp;
                            <a title="Xóa" class="btn btn-danger" href="@Url.Action("Delete", "Ships", new { id = item.Id })"><i class="fas fa-trash-alt"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
    </div>
