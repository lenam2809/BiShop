@model BiShop.Models.Ship

@{
    ViewBag.Title = "Xóa nguồn ship";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h3>Bạn có chắc chắn muốn xóa đơn vị giao hàng này?</h3>
<div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ShipName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ShipName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-warning" />
        </div>
    }
</div>

<div>
    <a title="Trở về" class="btn btn-info" style="margin-top: 15px;" href="@Url.Action("Index", "Ships")"><i class="fas fa-backward"></i> Trở về</a>
</div>
