@model IEnumerable<BiShop.Models.KHACHHANG>

@{
    ViewBag.Title = "Danh sách khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<a title="Thêm mới" class="btn btn-info" style="margin-top: 15px;" href="@Url.Action("Create", "KHACHHANGs")"><i class="fas fa-plus-circle"></i> Thêm khách hàng</a>

<div class="table-responsive">
    <table id="example" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TenKH)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NgaySinh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DiaChi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GioiTinh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Vip)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Photo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenKH)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgaySinh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiaChi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GioiTinh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vip)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        <img src="@Html.DisplayFor(modelItem => item.Photo)" alt="@Html.DisplayFor(modelItem => item.TenKH)" width="100" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <div style="display: flex;">
                            <a title="Chi tiết" class="btn btn-primary" href="@Url.Action("Details", "KHACHHANGs", new { id = item.Id })"><i class="fa fa-info-circle"></i></a>&nbsp;
                            <a title="Chỉnh sửa" class="btn btn-success" href="@Url.Action("Edit", "KHACHHANGs", new { id = item.Id })"><i class="fas fa-edit"></i></a>&nbsp;
                            <a title="Xóa" class="btn btn-danger" href="@Url.Action("Delete", "KHACHHANGs", new { id = item.Id })"><i class="fas fa-trash-alt"></i></a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    </div>

    @section scripts {
        <script>
        $('#example').DataTable();
        </script>
    }
