@model IEnumerable<BiShop.Models.SanPham>

@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


            <a title="Thêm mới" class="btn btn-info" style="margin-top: 15px;" href="@Url.Action("Create", "SanPhams")"><i class="fas fa-plus-circle"></i> Thêm sản phẩm</a>

            <div class="table-responsive">
                <table id="example" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.TenSP)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Gia)
                            </th>
                            <th>
                                Ảnh
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SoLuong)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LoaiSanPham.TenLoai)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NCC.TenNCC)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenSP)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Gia)
                                </td>
                                <td>
                                    <img src="@Html.DisplayFor(modelItem => item.LinkAnh)" alt="img" width="80" height="120" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoLuong)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LoaiSanPham.TenLoai)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NCC.TenNCC)
                                </td>
                                <td>
                                    <div style="display: flex;">
                                        <a title="Chi tiết" class="btn btn-primary" href="@Url.Action("Details", "SanPhams", new { id = item.MaSP })"><i class="fa fa-info-circle"></i></a>&nbsp;
                                        <a title="Chỉnh sửa" class="btn btn-success" href="@Url.Action("Edit", "SanPhams", new { id = item.MaSP })"><i class="fas fa-edit"></i></a>&nbsp;
                                        <a title="Xóa" class="btn btn-danger" href="@Url.Action("Delete", "SanPhams", new { id = item.MaSP })"><i class="fas fa-trash-alt"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        <!--/Datatable-->

@section scripts {
    <script>
        $('#example').DataTable();
    </script>
}




