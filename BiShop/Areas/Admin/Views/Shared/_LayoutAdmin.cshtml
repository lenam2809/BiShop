<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="keywords" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/images/luxury.png" />

    <!--Meta Responsive tag-->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!--Favicon Icon-->
    <link rel="icon" href="favicon.ico" type="image/x-icon">
    <!--Bootstrap CSS-->
    <link rel="stylesheet" href="~/Areas/assets/css/bootstrap.min.css">
    <!--Custom style.css-->
    <link rel="stylesheet" href="~/Areas/assets/css/quicksand.css">
    <link rel="stylesheet" href="~/Areas/assets/css/style.css">
    <!--Font Awesome-->
    <link rel="stylesheet" href="~/Areas/assets/css/fontawesome-all.min.css">
    <link rel="stylesheet" href="~/Areas/assets/css/fontawesome.css">
    <!--Animate CSS-->
    <link rel="stylesheet" href="~/Areas/assets/css/animate.min.css">
    <!--Chartist CSS-->
    <link rel="stylesheet" href="~/Areas/assets/css/chartist.min.css">
    <!--Map-->
    <link rel="stylesheet" href="~/Areas/assets/css/jquery-jvectormap-2.0.2.css">
    <!--Bootstrap Calendar-->
    <link rel="stylesheet" href="~/Areas/assets/js/calendar/bootstrap_calendar.css">
    <!--Nice select -->
    <link rel="stylesheet" href="~/Areas/assets/css/nice-select.css">


    <!--Form validator-->
    <link rel="stylesheet" href="~/Areas/assets/js/form-validator/theme-default.min.css">

    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    @*<script src="~/Areas/assets/js/ckeditor5/build-classic/ckeditor.js"></script>*@

    <title>BiLuxury - Admin</title>
</head>
<body>
    <!--Page loader-->
    <div class="loader-wrapper">
        <div class="loader-circle">
            <div class="loader-wave"></div>
        </div>
    </div>
    <!--Page loader-->
    <!--Page Wrapper-->

    <div class="container-fluid">

        <!--Header-->
        <div class="row header shadow-sm">

            <!--Logo-->
            <div class="col-sm-3 pl-0 text-center header-logo">
                <div class="bg-theme mr-3 pt-3 pb-2 mb-0">
                    <h3 class="logo"><a href="/Admin/AdminManagement/Index" class="text-secondary logo"><i class="far fa-gem"></i> BiLuxury<span class="small"> - admin</span></a></h3>
                </div>
            </div>
            <!--Logo-->
            <!--Header Menu-->
            <div class="col-sm-9 header-menu pt-2 pb-0">
                <div class="row">

                    <!--Menu Icons-->
                    <div class="col-sm-4 col-8 pl-0">
                        <!--Toggle sidebar-->
                        <span class="menu-icon" onclick="toggle_sidebar()">
                            <span id="sidebar-toggle-btn"></span>
                        </span>
                        <!--Toggle sidebar-->
                        <!--Notification icon-->
                        @Html.Partial("Notification")
                        <!--Notication icon-->
                        <!--Inbox icon-->
                        @Html.Partial("Inbox")
                        <!--Inbox icon-->
                    </div>
                    <!--Menu Icons-->
                    <!--Search box and avatar-->
                    <div class="col-sm-8 col-4 text-right flex-header-menu justify-content-end">
                        <div class="search-rounded mr-3">
                            @*<form action="/tim-kiem" method="get" enctype="multipart/form-data">
                                    <input id="nav-search" type="search" name="search" class="form-control search-box" placeholder="Nhập từ khóa.." />
                                </form>*@

                            @using (Html.BeginForm("SeachInfo", "AdminManagement", FormMethod.Get,
                                         new { enctype = "multipart/form-data" }))
                            {
                                <input id="nav-search" type="search" name="search" class="form-control search-box" placeholder="Nhập từ khóa.." />
                            }
                        </div>
                        <div class="mr-4">
                            <a class="" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <img src="~/Upload/IMG_9482.jpg" alt="Adam" class="rounded-circle" width="40px" height="40px">
                            </a>
                            <div class="dropdown-menu dropdown-menu-right mt-13" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" href="#"><i class="fa fa-user pr-2"></i> Profile</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/Admin/AdminManagement/SignOutAdmin"><i class="fa fa-power-off pr-2"></i> Logout</a>
                            </div>
                        </div>
                    </div>
                    <!--Search box and avatar-->
                </div>
            </div>
            <!--Header Menu-->
        </div>
        <!--Header-->
        <!--Main Content-->

        <div class="row main-content">
            <!--Sidebar left-->
            <div class="col-sm-3 col-xs-6 sidebar pl-0">
                <div class="inner-sidebar mr-3">
                    <!--Image Avatar-->
                    <div class="avatar text-center">
                        <img src="~/Upload/IMG_9482.jpg" alt="@HttpContext.Current.User.Identity.Name" class="rounded-circle" />
                        <p><strong>@(User.Identity.IsAuthenticated ? HttpContext.Current.User.Identity.Name : "Guest")</strong></p>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <span class="text-primary small"><strong>@Session["Role"]</strong></span>
                        }
                        </div>
                    <!--Image Avatar-->
                    <!--Sidebar Navigation Menu-->
                    @Html.Partial("Sidebar")
                    <!--Sidebar Naigation Menu-->
                </div>
            </div>
            <!--Sidebar left-->
            <!--Content right-->
            <div class="col-sm-9 col-xs-12 content pt-3 pl-0">
                <span class="text-secondary">Home <i class="fa fa-angle-right"></i><span id="title-admin"> @ViewBag.Title</span></span>

                <div class="row mt-3">
                    <div class="col-sm-12">
                        <!--Datatable-->
                        <div class="mt-1 mb-3 p-3 button-container bg-white border shadow-sm">
                            @RenderBody()
                        </div>
                    </div>
                </div>
                <!--Footer-->
                <div class="row mt-5 mb-4 footer">
                    <div class="col-sm-8">
                        <span>&copy; Đề tài: Xây dựng website bán hàng thời trang BI LUXURY <a class="text-theme" href="#"> - Lê Văn Nam - 2017602611</a></span>
                    </div>
                </div>
                <!--Footer-->
            </div>
        </div>

        <!--Main Content-->

    </div>

    <!--Page Wrapper-->
    <!-- Page JavaScript Files-->
    <script src="~/Areas/assets/js/jquery.min.js"></script>
    <script src="~/Areas/assets/js/jquery-1.12.4.min.js"></script>
    <!--Popper JS-->
    <script src="~/Areas/assets/js/popper.min.js"></script>
    <!--Bootstrap-->
    <script src="~/Areas/assets/js/bootstrap.min.js"></script>
    <!--Sweet alert JS-->
    <script src="~/Areas/assets/js/sweetalert.js"></script>
    <!--Progressbar JS-->
    <script src="~/Areas/assets/js/progressbar.min.js"></script>
    <!--Flot.JS-->
    <script src="~/Areas/assets/js/charts/jquery.flot.min.js"></script>
    <script src="~/Areas/assets/js/charts/jquery.flot.pie.min.js"></script>
    <script src="~/Areas/assets/js/charts/jquery.flot.categories.min.js"></script>
    <script src="~/Areas/assets/js/charts/jquery.flot.stack.min.js"></script>
    <!--Chart JS-->
    <script src="~/Areas/assets/js/charts/chart.min.js"></script>
    <!--Chartist JS-->
    <script src="~/Areas/assets/js/charts/chartist.min.js"></script>

    <!--Nice select-->
    <script src="~/Areas/assets/js/jquery.nice-select.min.js"></script>

    <!--Datatable-->
    <script src="~/Areas/assets/js/jquery.dataTables.min.js"></script>
    <script src="~/Areas/assets/js/dataTables.bootstrap4.min.js"></script>
    <!--Form validator-->
    <script src="~/Areas/assets/js/form-validator/jquery.form-validator.min.js"></script>


    <!--Custom Js Script-->
    <script src="~/Areas/assets/js/custom.js"></script>
    <!--Custom Js Script-->
    @RenderSection("scripts", required: false)
    @RenderSection("upload", required: false)
    @RenderSection("chart", required: false)
    <script>
        //Nice select
        $('.bulk-actions').niceSelect();
    </script>
</body>
</html>