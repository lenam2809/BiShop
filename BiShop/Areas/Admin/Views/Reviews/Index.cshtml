@model IEnumerable<BiShop.Models.Review>

@{
    ViewBag.Title = "Danh sách review từ khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="table-responsive">
    <table id="example" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NoiDung)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NgayTao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.KHACHHANG.TenKH)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SanPham.TenSP)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NoiDung)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayTao)
                    </td>
                    <td>
                        <a href="@Url.Action("Details","KHACHHANGs", new { id = @Html.DisplayFor(modelItem => item.KHACHHANG.Id) })">@Html.DisplayFor(modelItem => item.KHACHHANG.TenKH)</a>                        
                    </td>
                    <td>
                        <a href="@Url.Action("Details","SanPhams", new { id = @Html.DisplayFor(modelItem => item.SanPham.MaSP) })">@Html.DisplayFor(modelItem => item.SanPham.TenSP)</a>
                    </td>
                    <td>
                        <a title="Xóa" class="btn btn-danger" href="@Url.Action("Delete", "Reviews", new { id = item.Id })"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
@section scripts {
    <script>
        $('#example').DataTable();
    </script>
}
