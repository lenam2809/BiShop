@model IEnumerable<BiShop.Models.NCC>

@{
    ViewBag.Title = "Danh sách nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<a title="Thêm mới" class="btn btn-info" style="margin-top: 15px;" href="@Url.Action("Create", "NCCs")"><i class="fas fa-plus-circle"></i> Thêm nhà cung cấp</a>

<div class="table-responsive">
    <table id="example" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    Tên
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MoTa)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenNCC)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MoTa)
                    </td>
                    <td>
                        <div style="display: flex;">
                            <a title="Chỉnh sửa" class="btn btn-success" href="@Url.Action("Edit", "NCCs", new { id = item.Id })"><i class="fas fa-edit"></i></a>&nbsp;
                            <a title="Xóa" class="btn btn-danger" href="@Url.Action("Delete", "NCCs", new { id = item.Id })"><i class="fas fa-trash-alt"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
    </div>
